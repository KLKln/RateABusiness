@model RateABusiness.ViewModel.ReviewViewModel

<table style="width: 100%; border: 1px solid black">
    <tr>
        <td>
            @Model.ReviewDate.ToString(format: "f")
        </td>
    </tr>
    <tr>
        <td>
            @Model.Comment
        </td>
    </tr>
    <tr>
        <td>
            @Model.Rating
            @for (int i = 0; i < Model.Rating; i++)
            {
                <span class="glyphicon glyphicon-star"></span>
            }
            @for (int i = @Model.Rating; i < 10; i++)
            {
                <span class="glyphicon glyphicon-star-empty"></span>
            }
        </td>
    </tr>
</table>
